<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_marginTop="35dp"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:id="@+id/temperature_block" android:layout_below="@+id/header" android:layout_gravity="center_horizontal" android:weightSum="8">

    <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="-20dp" android:layout_marginRight="0dp" android:paddingRight="0dp"
            android:id="@+id/tvMinus" android:layout_weight="2" android:textColor="@android:color/white"
            android:text="-" android:textSize="100sp" android:layout_gravity="center_vertical" android:singleLine="true" android:maxLines="1"
            android:gravity="end|center_vertical"/>


    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end|top" android:layout_marginTop="-20dp" android:paddingRight="5dp"
            android:id="@+id/tvTemp" android:layout_weight="4" android:textColor="@android:color/white"
            android:textSize="130sp" android:layout_gravity="center" android:singleLine="true" android:maxLines="1"/>


    <LinearLayout android:layout_width="0dp" android:layout_weight="2" android:weightSum="5"
                  android:layout_height="fill_parent" android:orientation="vertical">


        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="0dp" android:layout_weight="1" android:gravity="left">
            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp" android:scaleType="centerCrop"
                    android:id="@+id/ivDegrees" android:layout_marginTop="5dp"
                    android:src="@drawable/degrees"/>
        </LinearLayout>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_weight="2"
                android:gravity="center"
                android:id="@+id/tvDaytime" android:textColor="@android:color/white"
                android:text="@string/night" android:textSize="18sp" android:layout_marginBottom="8dp" android:layout_marginRight="5dp"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_weight="2"
                android:gravity="center_horizontal|top"
                android:id="@+id/tvNightTemp" android:textColor="@android:color/white"
                android:textSize="30sp" android:layout_marginTop="-20dp"
                android:text="18"/>
    </LinearLayout>


</LinearLayout>