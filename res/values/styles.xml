<resources>

    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="numberPickerStyle">@style/NPWidget.Holo.NumberPicker</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextViewWidget">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="TextViewWithPadding" parent="TextView">
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="LocationTextView" parent="TextView">
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">68sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="LocationEditText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ow_settings</item>
        <item name="android:hint">@string/location_hint</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:imeOptions">actionNone</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PredictionTextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ow_settings</item>

        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>

        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@android:color/white</item>

        <item name="android:singleLine">true</item>
    </style>

</resources>