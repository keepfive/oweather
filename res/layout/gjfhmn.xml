<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView" android:layout_centerInParent="true"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:scaleType="fitEnd"
                android:id="@+id/imageView" android:layout_toRightOf="@+id/textView"
                android:layout_alignBottom="@+id/textView" android:src="@drawable/back_button" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>