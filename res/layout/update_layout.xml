<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="10dp" android:gravity="center">
    <ImageView android:id="@+id/ivRefresh" android:src="@drawable/refresh_button" android:layout_height="50dp"
               android:layout_width="50dp" android:layout_marginLeft="30dp"/>

    <TextView android:id="@+id/tvRefresh" android:text="@string/pull_to_refresh" android:layout_height="fill_parent"
              android:layout_width="fill_parent" android:gravity="center" android:textColor="@android:color/white"/>
</LinearLayout>