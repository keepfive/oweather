<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center" android:background="@color/background">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:weightSum="2" android:orientation="vertical"
                  android:gravity="center">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="0dp" android:layout_weight="1" android:id="@+id/image"
                   android:src="@drawable/sun"/>



        <TextView android:id="@+id/updating" android:text="@string/updating" android:textSize="28sp" android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="0dp" android:layout_marginTop="20dp" android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>