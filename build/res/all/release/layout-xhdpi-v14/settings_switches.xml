<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:id="@+id/settingsSwitches" android:layout_below="@id/settingsLocation" android:layout_marginTop="50dp"  android:paddingLeft="15dp"  android:paddingRight="15dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:weightSum="3">
        <TextView android:id="@+id/tvAutoDefine" android:layout_width="0dp"
                  android:layout_height="wrap_content" android:text="@string/auto_define" android:layout_weight="2" android:gravity="left" android:textSize="28dp" style="@style/TextView"/>
        <Switch android:id="@+id/switchAutoDefine" android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_weight="1" android:layout_gravity="center" android:textOn="On" android:textOff="Off"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_marginTop="50dp">

        <TextView android:id="@+id/tvNotification" android:layout_width="0dp"
                  android:layout_height="wrap_content" android:text="@string/notification" android:layout_weight="2" android:gravity="left" android:textSize="28dp" style="@style/TextView"/>
        <Switch android:id="@+id/switchNotification" android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_weight="1" android:layout_gravity="center" android:textOn="On" android:textOff="Off"/>
    </LinearLayout>
</LinearLayout><!-- From: file:/E:/Github_repo/oW/res/layout-xhdpi-v14/settings_switches.xml -->